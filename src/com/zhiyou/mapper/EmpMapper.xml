  <sql id="sqlId">
    e1.empno empno,e1.ename ename,e1.job job,e2.ename mgrName ,e1.hiredate hiredate,e1.sal sal,e1.comm comm,e1.deptno deptno
  </sql>
  
  <select id="findAll" resultType="emp" >

    select <include refid="sqlId"/> from emp e1 left join emp e2 on e1.mgr=e2.empno
    <where>
      <if test="keytype != null">
        <if test="keyword !=null">
          e1.${keytype} like concat('%',#{keyword},'%')
        </if>

      </if>
    </where>
  </select>

  
  
  <insert id="add" parameterType="emp" >
    insert into emp (empno, ename, job,
      mgr, hiredate, sal, comm,
      deptno)
    values (#{empno,jdbcType=INTEGER}, #{ename,jdbcType=VARCHAR}, #{job,jdbcType=VARCHAR},
      #{mgr,jdbcType=INTEGER}, #{hiredate,jdbcType=DATE}, #{sal,jdbcType=DECIMAL}, #{comm,jdbcType=DECIMAL},
      #{deptno,jdbcType=INTEGER})
  </insert>



  <delete id="delete" parameterType="int">
    delete from emp where empno=#{empno}
  </delete>





  <select id="findOne" parameterType="int" resultType="emp">
    select <include refid="sqlId"/> from emp where empno=#{empno}
  </select>


  <update id="updateEmp" parameterType="emp">
    update emp set ename =#{ename},job=#{job},mgr =#{mgr},hiredate=#{hiredate},sal =#{sal},comm=#{comm},deptno=#{deptno} where empno=#{empno}
  </update>


